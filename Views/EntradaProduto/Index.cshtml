@model IEnumerable<LojaDeHardware.Models.EntradaProduto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.EntradaProdutoQuantidade)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.EntradaProdutoData)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
