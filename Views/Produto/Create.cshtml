@model LojaDeHardware.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Produtos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoNome" class="control-label"></label>
                <input asp-for="ProdutoNome" class="form-control" />
                <span asp-validation-for="ProdutoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoPreco" class="control-label"></label>
                <input asp-for="ProdutoPreco" class="form-control" type="number" />
                <span asp-validation-for="ProdutoPreco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class ="form-control" asp-items="ViewBag.FornecedorId"></select>
            </div>
            <button type="submit" class="mt-4">
                <span class="transition"></span>
                <span class="gradient"></span>
                <span class="label">Cadastrar</span>
            </button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
