@model LojaDeHardware.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="inputbox  mt-2 mt-4">
                <input required="required" asp-for="CategoriaNome" type="text">
                <span>Categoria</span>
                <i></i>
            </div>
            <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            <button type="submit" class="mt-4">
                <span class="transition"></span>
                <span class="gradient"></span>
                <span class="label">Cadastrar</span>
            </button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
